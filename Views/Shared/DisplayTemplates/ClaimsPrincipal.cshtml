@model System.Security.Claims.ClaimsPrincipal

<table class="table table-condensed table-responsive table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>Value</th>
            <th>Type</th>
            <th>Value Type</th>
            <th>Subject Name</th>
            <th>Issuer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model.Claims)
        {
            <tr>
                <td>@claim.Value</td>
                <td>@claim.Type</td>
                <td>@claim.ValueType</td>
                <td>@claim.Subject.Name</td>
                <td>@claim.Issuer</td>
            </tr>
        }
    </tbody>
</table>